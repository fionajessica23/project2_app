<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Recipe App</title>
  <link rel='stylesheet' href='/stylesheets/main.css'>
  <link rel='stylesheet' href='/stylesheets/recipe-list.css'>
  <link rel='stylesheet' href='/stylesheets/my-recipe-list.css'>
  <link rel='stylesheet' href='/stylesheets/homepage.css'>
  <link rel='stylesheet' href='/stylesheets/button.css'>
  <link rel='stylesheet' href='/stylesheets/form.css'>
  <link rel='stylesheet' href='/stylesheets/login.css'>
</head>
<body>

  <header>
    <a href="/">
      <img class="logo" src="https://s3.amazonaws.com/heroku-www-files/customers/logos/sweettooth.png">
    </a>
    <nav>

      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/category/1/recipe">Cake</a></li>
        <li><a href="/category/2/recipe">Ice Cream</a></li>
        <li><a href="/category/3/recipe">Drink</a></li>
        <% if logged_in? %>
          <li><a href="/bookmark">My Saved Recipe</a></li>
          <li><a href="/myrecipe">My Recipe</a></li>
        <% end %>


        <% if logged_in? %>
          <li><a class="logout" href="/logout">Logout</a></li>
        <% else %>
          <li><a class="login" href="/login">Register/Login</a></li>
        <% end %>

      </ul>
    </nav>

  </header>
  <div class="content">
    <% if flash[:error] %>
      <div class="message">
        <%= flash[:error] %>
      </div>
    <% end %>

    <% if logged_in? %>
      <h3>Hi <%= current_user.name %></h3>
    <%end%>

    <%= yield %>
  </div>
  <footer>
    <div>Made with  <span class="love">â™¥</span>  in Melbourne</div>
  </footer>
</body>
</html>
