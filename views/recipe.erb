<h1>Recipe Detail</h1>


<% if @recipe.nil? %>
  <div class="">not found</div>
<% else %>
  <div>
    <div><%= @recipe.title %></div>
    <div><img class="detail-recipe-image" src="<%= @recipe.image %>"></div>
    <div>Category: <%= @recipe.category.name %></div>
    <div>Prep & cooking time: <%= @recipe.prep_time %> minutes</div>
    <div>Difficulty: <%= @recipe.difficulty %></div>
    <div>Serving: <%= @recipe.serving %></div>
    <div>Method: <%= @recipe.content %></div>
  </div>
<% end %>
